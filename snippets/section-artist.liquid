
{% assign target_collections = "500292976939,500295008555,500294844715,500294746411,500295074091,500295139627,500294943019,500294877483,500294779179,500294975787,500294713643,500294811947" | split: "," %}

{% assign product_in_target_collection = false %}

{% for collection in product.collections %}
  {% if target_collections contains collection.id %}
    {% assign matching_collection = collection %}
    {% break %}
  {% endif %}
{% endfor %}

{% if matching_collection %}



  
<div class="shopify-custom-artist-section">
  <h2>Shop This Artist</h2>

  {% if matching_collection and matching_collection.products.size > 0 %}
  <div class="artist-products">
    {% for product in matching_collection.products %}
      <div class="artist-product">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
        </a>
        <p>{{ product.title }}</p>
        <p>{{ product.price | money }}</p>
      </div>
    {% endfor %}
  </div>
  {% else %}
   
  {% endif %}
  <div class="artist-info">
    <img src="{{ matching_collection.image.src | img_url: 'medium' }}" alt="Artist picture">
    <div class="artist-details">
      <h3>{{ matching_collection.title }}</h3>
      <p>{{ matching_collection.description }}</p>
      <a href="{{ matching_collection.url }}" class="shop-artist-link">Shop This Artist</a>
    </div>
  </div>
  
</div>
<style>
  .shopify-custom-artist-section {
  background-color: #f5f0eb;
  padding: 20px;
  text-align: center;
}

.shopify-custom-artist-section h2 {
  font-size: 28px;
  margin-bottom: 20px;
}

.artist-products {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 40px;
}

.artist-product {
  width: 200px;
}

.artist-product img {
  width: 100%;
  height: auto;
}

.artist-product p {
  margin: 10px 0;
  font-size: 16px;
}

.artist-info {
  background-color: #b3baa9;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.artist-info img {
  width: 150px;
  height: auto;
  margin-right: 20px;
}

.artist-details {
  max-width: 400px;
  text-align: left;
}

.artist-details h3 {
  font-size: 24px;
  margin-bottom: 10px;
}

.artist-details p {
  margin-bottom: 20px;
  font-size: 14px;
}

.shop-artist-link {
  background-color: #6c7462;
  color: white;
  padding: 10px 20px;
  text-decoration: none;
  font-size: 14px;
}

</style>


  
{% endif %}