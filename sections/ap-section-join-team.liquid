{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

<section id="join" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    <div class="custom-row">
      <div class="custom-col-3">
      {% if section.settings.img_1 != blank %}
        <div class="meida-holder first-img">
          <img src="{{ section.settings.img_1 | image_url }}" loading="lazy">
        </div>
      {% endif %}
      </div>
      <div class="custom-col-6">
        <div class="content">
          {% if section.settings.title != blank %}
            <h2 class="heading">{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.desc != blank %}
            {{ section.settings.desc }}
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.btn_link }}" class="btn {% if section.settings.button_white != blank %}btn-white{% endif %}">{{ section.settings.btn_text }}</a>
          {% endif %}
        </div>
      </div>
      <div class="custom-col-3">
        {% if section.settings.img_2 != blank %}
        <div class="meida-holder second-img">
          <img src="{{ section.settings.img_2 | image_url }}" loading="lazy">
        </div>
      {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Join Our team",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "join Our Team"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Boston International is always looking for passionate and talented individuals to join our team. We offer a dynamic work environment, opportunities for growth, and a culture of promoting from within.</p>"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "apply now"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "image_picker",
      "id": "img_1",
      "label": "Add First Image"
    },
    {
      "type": "image_picker",
      "id": "img_2",
      "label": "Add Second Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 40
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "blk_bg_color",
      "label": "Product Block Background Color",
      "default": "#a2ab94"
    },
    {
      "type": "color",
      "id": "blk_text_color",
      "label": "Product Block Text Color",
      "default": "#fff"
    }
  ],
  "presets": [
    {
      "name": "Join Our team"
    }
  ]
}
{% endschema %}
