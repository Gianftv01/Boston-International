<style>
#partner-program{
  {% if section.settings.background_image_desk == blank %}
      background-image: url(https://cdn.shopify.com/s/files/1/0887/9108/9493/files/background-pattern.png?v=1722721226);
  {% else %}
      background-image: url('{{ section.settings.background_image_desk | img_url: 'master' }}');
  {% endif %}
}
.{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
}
@media screen and (max-width:767px){
  #partner-program{
    {% if section.settings.background_image_mob == blank %}
      background-image: url('{{ section.settings.background_image_desk | img_url: 'master' }}');
    {% else %}
        background-image: url('{{ section.settings.background_image_mob | img_url: 'master' }}') ;
    {% endif %}
  }
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
}
</style>

<section id="partner-program" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="custom-container">
    <div class="flexBlk" style="background-color: {{ section.settings.blk_bg_color }};">
      <div class="content">
        {% if section.settings.title != blank %}
          <h1 class="heading">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.desc != blank %}
          {{ section.settings.desc }}
        {% endif %}
        {% if section.settings.btn_text != blank %}
          <a href="{{ section.settings.btn_link }}" style="background-color:{{ section.settings.btn_bg_color }}; color: {{ section.settings.btn_text_color }}; border-color: {{ section.settings.btn_border_color }}" class="btn {% if section.settings.button_white != blank %}btn-white{% endif %}">{{ section.settings.btn_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Partner Program",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desk",
      "label": "Background Image[For Desktop]"
    },
    {
      "type": "image_picker",
      "id": "background_image_mob",
      "label": "Background Image[For Mobile]"
    },
    
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "blk_bg_color",
      "label": "Content Block Background Color",
      "default": "#f4eee9"
    },
  ],
  
  "presets": [
    {
      "name": "Partner Program",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}


