{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

<section id="our-believe" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    <div class="custom-row">
      <div class="custom-col-6">
        <div class="content">
          {% if section.settings.title != blank %}
            <h2 class="heading">{{ section.settings.title }}</h2>
          {% endif %}
          <div id="slick-believe">
            {% for block in section.blocks %}
            <div class="items">
              {% if block.settings.caption != blank %}
              <div class="believe-caption">
               <p>{{ block.settings.caption }}</p> 
              </div>
              {% endif %}
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="custom-col-6">
        {% if section.settings.pam_img != blank %}
        <div class="meida-holder">
          <img src="{{ section.settings.pam_img | image_url }}" loading="lazy">
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Believe",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "our believe"
    },
    {
      "type": "image_picker",
      "id": "pam_img",
      "label": "Add Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 40
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "type": "believe",
      "name": "Believe Block",
      "settings": [
        {
          "type": "text",
          "id": "caption",
          "label": "Add Believe Caption"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Our Believe"
    }
  ]
}
{% endschema %}
