{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}


<section class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="{% if section.settings.include_margins %}custom-container{% endif %}">
    {% render 'Section-title-area' %}
    {%- for block in section.blocks -%}
      {% render block %}
    {%- endfor -%}
  </div>
</section>
{% schema %}
{
  "name": "t:sections.apps.name",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle",
      "default": "Sub Heading Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link_2",
      "label": "Add Button link"
    },
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
