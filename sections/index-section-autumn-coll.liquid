{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}
<section id="custom-collection" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    {% render 'Section-title-area' %}
    <div class="custom-row">
      {% for block in section.blocks %}
      <div class="custom-col-3">
        <div class="custom-collection-card">
          {% if block.settings.blk_img != blank %}
            <a href="{% if block.settings.blk_link != blank %}{{ block.settings.blk_link }} {% else %}{{ block.settings.product.url }}{% endif %}" class="card-img">
               <img src="{{ block.settings.blk_img | image_url }}">
            </a>
            {% else %}
            <a href="{% if block.settings.blk_link != blank %}{{ block.settings.blk_link }} {% else %}{{ block.settings.product.url }}{% endif %}" class="card-img">
               <img src="{{ block.settings.product.featured_image | image_url }}">
            </a>
           {% endif %}
          <div class="card-content">
            {% if block.settings.blk_title != blank %}
              <h4>{{ block.settings.blk_title }}</h4>
            {% else %}
               <h4>{{ block.settings.product.title }}</h4>
            {% endif %}
            {% if block.settings.blk_cta_text != blank %}
            <a href="{% if block.settings.blk_link != blank %}{{ block.settings.blk_link }} {% else %}{{ block.settings.product.url }}{% endif %}" class="card-link">{{ block.settings.blk_cta_text }} <img src="https://cdn.shopify.com/s/files/1/0874/7388/1387/files/collection-long-arrow.png?v=1724716466"></a>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Autumn Collection",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle",
      "default": "Sub Heading Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link_2",
      "label": "Add Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product block",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Add Product Image"
        },
        {
          "type": "url",
          "id": "blk_link",
          "label": "Add Product Link"
        },
        {
          "type": "text",
          "id": "blk_title",
          "label": "Add Product Title Text",
          "default": "Product Title"
        },
        {
          "type": "text",
          "id": "blk_cta_text",
          "label": "Add Call To Action Text",
          "default": "shop This collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Autumn Collection"
    }
  ]
}
{% endschema %}
