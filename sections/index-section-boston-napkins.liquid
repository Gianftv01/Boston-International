{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}
<section id="fuction" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="title-area">
      {% if section.settings.subtitle != blank %}
        <h4 class="subheading">{{ section.settings.subtitle }}</h4>
      {% endif %}
      {% if section.settings.title != blank %}
        <h1 class="heading">{{ section.settings.title }}</h1>
      {% endif %}
      {% if section.settings.desc != blank %}
        {{ section.settings.desc }}
      {% endif %}

      {% if section.settings.btn_text != blank or section.settings.btn_text_2 != blank  %}
      <div class="btn-blk">
        {% if section.settings.btn_text != blank %}
          <a href="{{ section.settings.btn_link }}" class="btn">{{ section.settings.btn_text }}</a>
        {% endif %}
        {% if section.settings.btn_text_2 != blank %}
          <a href="{{ section.settings.btn_link_2 }}" class="btn {% if section.settings.button_white != blank %}btn-white{% endif %}">{{ section.settings.btn_text_2 }}</a>
        {% endif %}
      </div>
      {% endif %}
  </div>
  <div id="slick-fuction" dir="rtl">
    {% for block in section.blocks %}
    <div class="items">
      <a href="{{ block.settings.blk_link }}" class="fucntion-blk">
        {% if block.settings.blk_img != blank %}
          <img src="{{ block.settings.blk_img | image_url }}" loading="lazy">
        {% endif %}
      </a>
    </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Boston Napkin",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle",
      "default": "Sub Heading Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link_2",
      "label": "Add Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#F4EEE9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000"
    }
    
  ],
  "blocks": [
    {
      "type": "napkin",
      "name": "Napkin block",
      "settings": [
        {
          "type": "url",
          "id": "blk_link",
          "label": "Add Napkin Link"
        },
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Add Napkin Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Boston Napkin"
    }
  ]
}
{% endschema %}
