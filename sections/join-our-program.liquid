{% schema %}
{
	"name": "Join Our Program",
	"settings": [
		{
			"type": "image_picker",
			"id": "logo_image",
			"label": "Logo Image"
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "join our program"
		},
		{
			"type": "textarea",
			"id": "description",
			"label": "Description",
			"default": "Ready to elevate your product offerings with Boston International's artistic and high-quality napkins? We have an impressive selection of everything from beverage napkins to luncheon napkins."
		},
		{
			"type": "url",
			"id": "register_link",
			"label": "Register Button Link"
		},
		{
			"type": "text",
			"id": "register_button_text",
			"label": "Register Button Text",
			"default": "register now"
		},
		{
			"type": "image_picker",
			"id": "aside_image",
			"label": "Aside Image"
		}
	],
	"presets": [
		{
			"name": "Join Our Program",
			"category": "Custom Sections"
		}
	]
}
{% endschema %}
<style>
	.join-our-program {
		background: #EDE4DC;
		.container {
			display: flex;
			flex-direction: column;
			gap: 2em;
			@media screen and (min-width: 1024px) {
				flex-direction: row-reverse;
				gap: 0;
				align-items: center;
			}
			.content {
				padding: 2em 0;
				display: flex;
				flex-direction: column;
				gap: 1.5em;
				justify-content: flex-start;
				align-items: flex-start;
				@media screen and (min-width: 1024px) {
					padding: 4em;
				}
				figure {
					width: 12em;
					padding: 0;
					margin: 0;
					img {
						width: 100%;
						height: auto;
					}
				}
			}
			aside {
				figure {
					margin: 0;
					img {
						width: 100%;
						height: auto;
					}
				}
			}
		}
	}
</style>
<section class="join-our-program">
	<div class="container">
		<div class="content">
			<figure><img src="{{ section.settings.logo_image | img_url: 'master' }}"></figure>
			<h2>{{ section.settings.heading }}</h2>
			<p>{{ section.settings.description }}</p>
			<a href="{{ section.settings.register_link }}" class="btn">{{ section.settings.register_button_text }}</a>
		</div>
		<aside><figure><img src="{{ section.settings.aside_image | img_url: 'master' }}"></figure></aside>
	</div>
</section>