{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

<section id="caption-bar" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    <div class="content">
     {% if section.settings.subtitle != blank %}
        <h4 class="subheading">{{ section.settings.subtitle }}</h4>
      {% endif %}
      {% if section.settings.desc != blank %}
        {{ section.settings.desc }}
      {% endif %}
      {% if section.settings.btn_text != blank %}
          <a href="{{ section.settings.btn_link }}" class="cta-style"><span>{{ section.settings.btn_text }}</span></a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Call To Action Bar",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#a2ab94"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#fff"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle",
      "default": "Subheading Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem ipsum dolor sit amet consectetur. Massa praesend.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add link Text",
      "default": "cta Text here"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Call TO Action link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Call To Action Bar"
    }
  ]
}
{% endschema %}
