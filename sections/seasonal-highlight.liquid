{% schema %}
{
	"name": "Seasonal Highlight",
	"settings": [
		{
			"type": "image_picker",
			"id": "background_image",
			"label": "Background Image"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading",
		},
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
		},
		{
			"type": "url",
			"id": "button_link",
			"label": "Button Link",
		},
		{
			"type": "text",
			"id": "button_text",
			"label": "Button Text",
		}
	],
	"presets": [
		{
			"name": "Seasonal Highlight",
			"category": "Custom Sections"
		}
	]
}
{% endschema %}

<style>
	.seasonal-highlight {
		background-size: cover;
		background-position: center center;
		padding: 2em 0 6em;
		@media screen and (min-width: 1024px) {
			padding: 10vh 0 40vh;
		}
		.container {
			max-width: 1200px;
			.content {
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: flex-start;
				gap: 1.25em;
				color: white;
				strong {
					font-size: 1.2em;
					font-family: "Cormorant", serif;
				}
				h2 {
					color: white;
					@media screen and (min-width: 1024px) {
						
					}
				}
			}
		}
	}
</style>

<section class="seasonal-highlight" style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');">
	<div class="container">
		<div class="content">
			<strong>{{ section.settings.subheading }}</strong>
			<h2>{{ section.settings.heading }}</h2>
			<a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
		</div>
	</div>
</section>
