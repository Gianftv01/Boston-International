{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}
<section id="catalog" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    {% render 'Section-title-area' %}
    <div class="custom-row">
      {% for block in section.blocks %}
      <div class="custom-col-3">
        <div class="catalog-blk">
          {% if block.settings.blk_img != blank %}
          <a href="{{ block.settings.blk_link }}" class="blk-img">
            <img src="{{ block.settings.blk_img | image_url }}">
          </a>
          {% endif %}
          <div class="blk-content">
            {% if block.settings.blk_title != blank %}
              <h4>{{ block.settings.blk_title }}</h4>
            {% endif %}
            {% if block.settings.blk_desc != blank %}
              {{ block.settings.blk_desc }}
            {% endif %}
            {% if block.settings.blk_cta_text != blank %}
              <a href="{{ block.settings.blk_link }}" class="cta-style"><span>{{ block.settings.blk_cta_text }}</span></a>
            {% endif %}
          </div>
        </div>
      </div>
     {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Custom Catalog",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle",
      "default": "Sub Heading Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text_2",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link_2",
      "label": "Add Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Cataog block",
      "settings": [
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Add Catalog Image"
        },
        {
          "type": "url",
          "id": "blk_link",
          "label": "Add Catalog Link"
        },
        {
          "type": "text",
          "id": "blk_title",
          "label": "Add Catalog Title",
          "default": "Catalog Title"
        },
        {
          "type": "richtext",
          "id": "blk_desc",
          "label": "Add Catalog Description",
          "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,</p>"
        },
        {
          "type": "text",
          "id": "blk_cta_text",
          "label": "Add Call To Action Text",
          "default": "shop"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Catalog"
    }
  ]
}
{% endschema %}
