<style>
.{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
}

</style>
<section id="Perfection" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="custom-container">
    <div class="custom-row">
      <div class="custom-col-6">
        {% if section.settings.primary_image != blank %}
        <div class="media-holder">
          <img src="{{ section.settings.primary_image | image_url }}">
        </div>
        {% endif %}
      </div>
      <div class="custom-col-3">
        {% if section.settings.secondery_image != blank %}
        <div class="media-holder">
          <img src="{{ section.settings.secondery_image | image_url }}">
        </div>
        {% endif %}
      </div>
      <div class="custom-col-3">
        <div class="content">
          {% if section.settings.title != blank %}
            <h1 class="heading">{{ section.settings.title }}</h1>
          {% endif %}
          {% if section.settings.subtitle != blank %}
            <h4>{{ section.settings.subtitle }}</h4>
          {% endif %}
          {% if section.settings.btn_text != blank %}
          <a href="{{ section.settings.btn_link }}" style="background-color:{{ section.settings.btn_bg_color }}; color: {{ section.settings.btn_text_color }}; border-color: {{ section.settings.btn_border_color }}" class="btn {% if section.settings.button_white != blank %}btn-white{% endif %}">{{ section.settings.btn_text }}</a>
        {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Pumpkin Prefection",
  "settings": [
    {
      "type": "image_picker",
      "id": "primary_image",
      "label": "Add Primary Image"
    },
    {
      "type": "image_picker",
      "id": "secondery_image",
      "label": "Add Secondery Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Section Title Text"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle Here",
      "default": "Lorem Ipsum has been the industry's standard dummy text ever since the 1500s,"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 50
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color"
    },
    {
      "type": "color",
      "id": "btn_border_color",
      "label": "Button Border Color"
    }
  ],
  
  "presets": [
    {
      "name": "Pumpkin Prefection",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}


