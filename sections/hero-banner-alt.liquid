{% schema %}
{
  "name": "Hero Banner Alt",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Introducing Boston International's"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Wholesale Program"
    },
    {
      "type": "url",
      "id": "join_now_link",
      "label": "Join Now Link"
    },
    {
      "type": "text",
      "id": "join_now_text",
      "label": "Join Now Button Text",
      "default": "Join Now"
    },
    {
      "type": "url",
      "id": "login_link",
      "label": "Login Link"
    },
    {
      "type": "text",
      "id": "login_text",
      "label": "Login Button Text",
      "default": "Login"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Alt",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<style type="text/css">
  .hero-banner-alt {
    background-image: url({{ section.settings.background_image | img_url: 'master' }});
    background-size: cover;
    background-position: center center;
    min-height: 75vh;
  }
  .hero-banner-alt .content {
    text-align: center;
    padding: 3em 0;
    * {
      margin: 0;
    }
    display: flex;
    flex-direction: column;
    gap: 1.5em;
  }
  .hero-banner-alt ul {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin: 0;
    padding: 0;
  }
  .hero-banner-alt ul li {
    list-style-type: none;
  }
</style>

<section class="hero-banner-alt">
  <div class="container">
    <div class="content">
      <h4>{{ section.settings.subheading }}</h4>
      <h1>{{ section.settings.heading | newline_to_br }}</h1>
      <ul>
        <li><a href="{{ section.settings.join_now_link }}" class="btn btn-white">{{ section.settings.join_now_text }}</a></li>
        <li><a href="{{ section.settings.login_link }}" class="btn">{{ section.settings.login_text }}</a></li>
      </ul>
    </div>
  </div>
</section>
