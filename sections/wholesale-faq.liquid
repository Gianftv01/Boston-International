{% schema %}
{
	"name": "Wholesale FAQ",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading",
			"default": "how our wholesale program works"
		},
		{
			"type": "textarea",
			"id": "subheading",
			"label": "Subheading",
			"default": "here's how you can get started"
		}
	],
	"blocks": [
		{
			"type": "faq",
			"name": "FAQ",
			"settings": [
				{
					"type": "text",
					"id": "question",
					"label": "Question",
					"default": "What do I need to apply as a wholesaler?"
				},
				{
					"type": "textarea",
					"id": "answer",
					"label": "Answer",
					"default": "To have your application approved, you will need to provide your federal tax ID number and a copy of your Resale Certificate as required by your state."
				}
			]
		}
	],
	"presets": [
		{
			"name": "Wholesale FAQ",
			"category": "Custom Sections"
		}
	]
}
{% endschema %}
<style>
	.wholesale-faq {
		padding: 2em 0;
		
		@media screen and (min-width: 1024px) {
			padding: 4em 0;
		}
		.container {
			max-width: 1200px;
			display: flex;
			flex-direction: column;
			gap: 2em;
			@media screen and (min-width: 1024px) {
				flex-direction: row;
				gap: 4em;
				align-items: flex-start;
			}
			.content {
				@media screen and (min-width: 1024px) {
					flex: 1;
				}
			}
			aside {
				dl {
					margin: 0;
					dt {
						margin: 0;
						border-top: 1px solid white;
						background-color: #EDE4DC;
						padding: 0.75em 1em;
						
						display: flex;
						justify-content: space-between;
						align-items: flex-start;
						gap: 1em;
						p {
							margin: 0;
							width: 90%;
							font-size: 1.2em;
							font-family: news-gothic-std, sans-serif;
						}
						span {
							width: 0.7em;
							height: 0.4em;
							line-height: 1;
							background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="14" height="8" viewBox="0 0 14 8" fill="none"><path d="M1 1L7 7L13 1" stroke="%23000"/></svg>');
							background-size: contain;
							background-repeat: no-repeat;
							background-position: center;
							position: relative;
							top: 0.5em;
						}
						&.open {
							background: transparent;
							padding-bottom: 0.25em;
							span {
								transform: rotate(180deg);
							}
						}
					}
					dd {
						margin: 0;
						display: none;
						padding: 0 1em 0.75em 1em;
					}
				}
				@media screen and (min-width: 1024px) {
					flex: 1;
				}
			}
		}
	}
</style>
<section class="wholesale-faq">
	<div class="container">
		<div class="content">
			<h2>{{ section.settings.heading }}</h2>
			<p>{{ section.settings.subheading }}</p>
		</div>
		<aside>
			<dl>
				{% for faq in section.blocks %}
					<dt><p>{{ faq.settings.question }}</p> <span></span></dt>
					<dd>{{ faq.settings.answer }}</dd>
				{% endfor %}
			</dl>
		</aside>
	</div>
</section>
<script>
document.querySelectorAll('.wholesale-faq dt').forEach(function(dt) {
	dt.addEventListener('click', function() {
		// Toggle the 'open' class on the clicked dt
		this.classList.toggle('open');
		
		// Toggle the display of the next sibling dd element
		const dd = this.nextElementSibling;
		if (dd.style.display === "none" || dd.style.display === "") {
			dd.style.display = "block";
		} else {
			dd.style.display = "none";
		}
	});
});

</script>