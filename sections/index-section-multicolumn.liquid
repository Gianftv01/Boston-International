<style>
.{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
}

</style>
<section id="custom-grid" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    <div class="custom-row">
      <div class="custom-col-60">
        <div class="content-blk">
              {% if section.settings.title != blank %}
                <h2 class="heading">{{ section.settings.title }}</h2>
              {% endif %}
              {% if section.settings.subtitle != blank %}
                <h4 class="subheading">{{ section.settings.subtitle }}</h4>
              {% endif %}
              {% if section.settings.desc != blank %}
                {{ section.settings.desc }}
              {% endif %}
              {% if section.settings.btn_text != blank %}
                <p style="margin-top: 1em;"><a href="{{ section.settings.btn_link }}" class="btn">{{ section.settings.btn_text }}</a></p>
              {% endif %}
            </div>
      </div>
      <div class="custom-col-40">
        {% if section.settings.grid_img_1 != blank %}
          <div class="image-holder">
            <img src="{{ section.settings.grid_img_1 | image_url }}">
          </div>
          {% endif %}
      </div>
      <div class="custom-col-60">
        {% if section.settings.grid_img_2 != blank %}
          <div class="image-holder">
            <img src="{{ section.settings.grid_img_2 | image_url }}">
          </div>
          {% endif %}
      </div>
      <div class="custom-col-40">
        {% if section.settings.grid_img_3 != blank %}
          <div class="image-holder">
            <img src="{{ section.settings.grid_img_3 | image_url }}">
          </div>
          {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Multicolumn",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Add Title",
      "default": "The Everyday Collection"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Add Title",
      "default": "Introducing your new favorites list"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Add Description",
      "default": "<p>Discover our new Everyday Catalog, brimming with must-have home decor, gifts, and paper goods that will quickly become staples on your shelves all year long.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "image_picker",
      "id": "grid_img_1",
      "label": "Add Grid Image 1"
    },
    {
      "type": "image_picker",
      "id": "grid_img_2",
      "label": "Add Grid Image 1"
    },
    {
      "type": "image_picker",
      "id": "grid_img_3",
      "label": "Add Grid Image 1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#F4EEE9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "Custom Multicolumn"
    }
  ]
}
{% endschema %}
