{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

<section id="about-pam" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="custom-container">
    <div class="custom-row">
      <div class="custom-col-60">
        <div class="content">
          {% if section.settings.title != blank %}
            <h2 class="heading">{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.desc != blank %}
            {{ section.settings.desc }}
          {% endif %}
          {% if section.settings.btn_text != blank %}
            <a href="{{ section.settings.btn_link }}" class="btn {% if section.settings.button_white != blank %}btn-white{% endif %}">{{ section.settings.btn_text }}</a>
          {% endif %}
        </div>
      </div>
      <div class="custom-col-40">
        {% if section.settings.pam_img != blank %}
        <div class="meida-holder">
          <img src="{{ section.settings.pam_img | image_url }}" loading="lazy">
        </div>
        {% endif %}
        {% if section.settings.qoute != blank %}
        <div class="pam-qoute">
            {{ section.settings.qoute }}
        </div>
        {% endif %}
      
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Pam",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "About Pam"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    
    {
      "type": "image_picker",
      "id": "pam_img",
      "label": "Add Pam Image"
    },
    {
      "type": "richtext",
      "id": "qoute",
      "label": "Enter Pam Qoute",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s</p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 40
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ede4dc"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#737d62"
    }
  ],
  "presets": [
    {
      "name": "About Pam"
    }
  ]
}
{% endschema %}
