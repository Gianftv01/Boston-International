{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}

<section id="celebrate" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div class="wrapper">
    {% if section.settings.about_img != blank %}
      <div class="meida-holder">
        <img src="{{ section.settings.about_img | image_url }}" loading="lazy">
      </div>
    {% endif %}
    <div class="content">
      {% if section.settings.logo_img != blank %}
        <img src="{{ section.settings.logo_img | image_url }}" loading="lazy">
      {% endif %}
      {% if section.settings.title != blank %}
        <h1 class="heading">{{ section.settings.title }}</h1>
      {% endif %}
      {% if section.settings.desc != blank %}
        {{ section.settings.desc }}
      {% endif %}
      {% if section.settings.btn_text != blank %}
        <a href="{{ section.settings.btn_link }}" class="btn">{{ section.settings.btn_text }}</a>
      {% endif %}
    </div>
  </div>
</section>

<section id="seasion-products" class="{{ section.id }}-padding" style="background-color: {{ section.settings.blk_bg_color }}; color:{{ section.settings.blk_text_color }}">
  <div class="custom-container">
    <div class="custom-row upper-row">
      <div class="custom-col-9 upper-row-col">
        <div class="custom-row scrollable-row">
          {% for block in section.blocks %}
          <div class="custom-col-3">
            <div class="product-blk">
              <a href="{{ section.settings.link }}" class="blk-img">
                {% if block.settings.blk_img != blank %}
                  <img src="{{ block.settings.blk_img | image_url }}" loading="lazy">
                {% endif %}
              </a>
              {% if block.settings.blk_text != blank %}
                <a href="{{ block.settings.link }}" class="cta-style"><span>{{ block.settings.blk_text }}</span></a>
              {% endif %}
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="custom-col-3 upper-row-col">
        {% if section.settings.product_blk-desc != blank %}
          <div class="inner-text">
            {{ section.settings.product_blk-desc }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Boston",
  "settings": [
    {
      "type": "image_picker",
      "id": "about_img",
      "label": "Add Image"
    },
    {
      "type": "image_picker",
      "id": "logo_img",
      "label": "Add Logo Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>We believe in turning familiar spaces into works of artâ€”by infusing the simple things with personality and artistry.</p>"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "richtext",
      "id": "product_blk-desc",
      "label": "Product Block Description",
      "default": "<p>At Boston International, we believe that the changing seasons bring opportunities to infuse your home with warmth, style, and sophistication.</p>"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 40
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ede4dc"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "blk_bg_color",
      "label": "Product Block Background Color",
      "default": "#a2ab94"
    },
    {
      "type": "color",
      "id": "blk_text_color",
      "label": "Product Block Text Color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "type": "napkin",
      "name": "Product block",
      "settings": [
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Add Napkin Image"
        },
        {
          "type": "text",
          "id": "blk_text",
          "label": "Add CTA Text",
          "default": "Shop"
        },
        {
          "type": "url",
          "id": "blk_link",
          "label": "Add CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Boston"
    }
  ]
}
{% endschema %}
