<style>
#banner-section-{{ section.id }}{
  {% if section.settings.background_image_desk == blank %}
      background-image: url(https://cdn.shopify.com/s/files/1/0887/9108/9493/files/background-pattern.png?v=1722721226);
  {% else %}
      background-image: url('{{ section.settings.background_image_desk | img_url: 'master' }}');
  {% endif %}
}
#banner-section-{{ section.id }} .flexBlk{
    min-height: {{ section.settings.banner_height }}vh;
}
.{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
  #banner-section-{{ section.id }} .flexBlk{
    min-height: {{ section.settings.banner_height | times: 0.9 | round: 0 }}vh;
  }
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
}
@media screen and (max-width:767px){
  #banner-section-{{ section.id }}{
    {% if section.settings.background_image_mob == blank %}
      background-image: url('{{ section.settings.background_image_desk | img_url: 'master' }}');
    {% else %}
        background-image: url('{{ section.settings.background_image_mob | img_url: 'master' }}') ;
    {% endif %}
  }
  #banner-section-{{ section.id }} .flexBlk{
    min-height: {{ section.settings.banner_height | times: 0.75 | round: 0 }}vh;
  }
}
</style>

<section id="banner-section-{{ section.id }}" class="banner-style" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="custom-container">
    <div class="flexBlk {{ section.id }}-padding">
      <div class="content" style="text-align: {{ section.settings.text_alignment }};">
        {% if section.settings.tag_list != blank %}
        <div class="tag-list-wrapper">
          <ul class="tag-list">
            {% if section.settings.tag_1 != blank %}
            <li>{{ section.settings.tag_1 }}</li>
            {% endif %}
            {% if section.settings.tag_2 != blank %}
            <li>{{ section.settings.tag_2 }}</li>
            {% endif %}
          </ul>
        </div>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <h4 class="subheading">{{ section.settings.subtitle }}</h4>
        {% endif %}
        {% if section.settings.title != blank %}
          <h1 class="heading">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.desc != blank %}
          {{ section.settings.desc }}
        {% endif %}
        {% if section.settings.btn_text != blank %}
          <a href="{{ section.settings.btn_link }}" style="background-color:{{ section.settings.btn_bg_color }}; color: {{ section.settings.btn_text_color }}; border-color: {{ section.settings.btn_border_color }}" class="btn {% if section.settings.button_white != blank %}btn-white{% endif %}">{{ section.settings.btn_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Custom Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image_desk",
      "label": "Background Image[For Desktop]"
    },
    {
      "type": "image_picker",
      "id": "background_image_mob",
      "label": "Background Image[For Mobile]"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Banner Height",
      "default": 100
    },
    {
      "type": "checkbox",
      "id": "tag_list",
      "label": "Show/Hide Banner Tag List",
      "default": true
    },
    {
      "type": "text",
      "id": "tag_1",
      "label": "Enter Tag Text",
      "default": "Tag Text 1"
    },
    {
      "type": "text",
      "id": "tag_2",
      "label": "Enter Tag Text",
      "default": "Tag Text 2"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Enter Subtitle",
      "default": "Hero Banner Sub heading Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter Title Here",
      "default": "Hero Banner Title Text"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "Enter Description Here",
      "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>"
    },
    {
      "type": "checkbox",
      "id": "button_white",
      "label": "Show White Button",
      "default": false
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Add Button Text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Add Button link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 50
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#151F2A"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color"
    },
    {
      "type": "color",
      "id": "btn_border_color",
      "label": "Button Border Color"
    }
  ],
  
  "presets": [
    {
      "name": "Custom Hero Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}


