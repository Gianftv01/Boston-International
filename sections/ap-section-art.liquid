{%- style -%}
  .{{ section.id }}-padding{
    padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 991px) {
    .{{ section.id }}-padding{
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }
{%- endstyle -%}
<section id="pam-art" class="{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }}; color:{{ section.settings.text_color }}">
  <div id="slick-pam-art">
    {% for block in section.blocks %}
    <div class="items">
      <a href="{{ block.settings.blk_link }}" class="fucntion-blk">
        {% if block.settings.blk_img != blank %}
          <img src="{{ block.settings.blk_img | image_url }}" loading="lazy">
        {% endif %}
      </a>
    </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Pam Art",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Paading Top",
      "default": 70
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Add Section Padding Bottom",
      "default": 70
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#f4eee9"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000"
    }
    
  ],
  "blocks": [
    {
      "type": "art",
      "name": "Art block",
      "settings": [
        {
          "type": "url",
          "id": "blk_link",
          "label": "Add Napkin Link"
        },
        {
          "type": "image_picker",
          "id": "blk_img",
          "label": "Add Napkin Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Pam Art"
    }
  ]
}
{% endschema %}
